<div class="container my-5">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="card shadow-sm">
        <div class="card-body">
          <h2 class="card-title text-primary font-weight-bold mb-3"><%= @restaurant.name %></h2>
          <p class="card-text mb-2"><strong>Address:</strong> <%= @restaurant.address %></p>
          <p class="card-text mb-2"><strong>Phone:</strong> <%= @restaurant.phone_number %></p>
          <p class="card-text mb-4"><strong>Category:</strong> <%= @restaurant.category.capitalize %></p>

          <h3 class="h4 mb-3">Write a Review</h3>
          <%= render 'reviews/form' %>
          <%= link_to 'Back to list', restaurants_path, class: 'btn btn-secondary btn-sm' %>
        </div>
      </div>
    </div>
  </div>

  <!-- Reviews Section -->
  <div class="row mt-4">
    <div class="col-md-8 mx-auto">
      <div class="d-flex overflow-auto gap-3 py-3">
        <% @restaurant.reviews.each do |review| %>
          <div class="review-box p-3 shadow-sm rounded bg-light" style="min-width: 250px;">
            <p><%= review.content %></p>
            <p><strong>Rating:</strong> <%= review.rating %> / 5</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
