<%= simple_form_for [@restaurant, @review] do |f| %>
  <div class="form-group mb-3">
    <%= f.input :content, as: :text, label: 'Content', input_html: { class: 'form-control', rows: 4 } %>
  </div>

  <div class="form-group mb-4">
    <%= f.input :rating, as: :select, collection: 0..5, label: 'Rating (0 to 5)', input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group h2">
    <%= f.submit "Submit Review", class: "btn btn-warning btn-sm" %>
  </div>
<% end %>
